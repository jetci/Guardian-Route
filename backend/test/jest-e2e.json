{
  "moduleFileExtensions": ["js", "json", "ts", "mjs"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", { "tsconfig": "./tsconfig.json", "useESM": true }]
  },
  "extensionsToTreatAsEsm": [".ts"],
  "transformIgnorePatterns": ["node_modules/(?!uuid)"]
}
