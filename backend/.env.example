# Example environment variables for Guardian Route backend

# Database
DATABASE_URL="postgresql://{{DB_USER}}:{{DB_PASSWORD}}@{{DB_HOST}}:{{DB_PORT}}/{{DB_NAME}}?schema=public"

# JWT
JWT_SECRET="replace-with-secure-random-string"
JWT_EXPIRATION="8h"
REFRESH_TOKEN_SECRET="replace-with-secure-random-string"
REFRESH_TOKEN_EXPIRATION="7d"

# Server
PORT=3001
NODE_ENV=production
CORS_ORIGIN="http://localhost:5173"

# File uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# Logging
LOG_LEVEL="info"
